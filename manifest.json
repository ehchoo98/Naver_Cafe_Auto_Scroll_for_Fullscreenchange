{
  "manifest_version": 3,
  "name": "네이버 카페 전체화면 스크롤",
  "version": "1.0",
  "description": "네이버 카페에서 영상 전체화면 종료 시, 스크롤이 원치 않는 곳으로 이동하는 문제 해결",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "*://cafe.naver.com/*"
      ],
      "all_frames": true
    }
  ]
}
